{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/types",
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "checkJs": true,
    "strict": true,
    "types": ["node", "jest"],
    "declaration": true,
    "incremental": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
